os.loadAPI("SkyNet/MWP/lib/gps2")

function digDownUp(height)
    for i=1, height - 5 do --bedrock layer is 0-4
        turtle.digDown()
        turtle.down()
    end
    turtle.dig()
    turtle.forward()
    for i=1, height - 5 do --bedrock layer is 0-4
        turtle.digUp()
        turtle.up()
    end
end

function quarryLine(height)
    for i=1,7 do   
        digDownUp(height)
        turtle.dig()
        turtle.forward()
    end
    digDownUp()
end