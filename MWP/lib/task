    start = function(self)
        self.enabled = true

        while self.enabled do
            self:run()
        end
    end,

    stop = function(self)
        self.enabled = false
    end
}

function taskHandler:new( _listeners, _intermediateTask, _name)
    local obj = {
        name = _name
        enabled = false,
        listeners = _listeners,
        intermediateTask = _intermediateTask

    }

    setmetatable(obj, self)
    self.__index = self

    return obj
end